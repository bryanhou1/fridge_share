<h1>Fridges</h1>

<table border=1 bordercolor=black>
  <thead>
    <tr>
      <th>Fridge ID</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @fridges.each do |fridge| %>
      <tr>
        <td><%= fridge.id %></td>
        <td><%= fridge.name %></td>
        <td><%= link_to 'Show', fridge %></td>
        <td><%= link_to 'Edit', edit_fridge_path(fridge) %></td>
        <!-- only show fridge destroy button when fridge is empty -->
        <td><%= link_to 'Destroy', fridge, method: :delete, data: { confirm: 'Are you sure?' } if fridge.items == [] %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Fridge', new_fridge_path %>
