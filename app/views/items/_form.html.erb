<%= form_for @item do |f| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :item_name %>
  </div>

  <div class="field">
    <%= f.label :expiration_date %>
    <%= f.text_field :expiration_date, id: :item_expiration_date %>
  </div>

  <div class="field">
    <%= f.label "Belongs to: " %>
    <%= f.collection_select :user_id, User.all, :id, :email, {selected: current_user.id} %>
  </div>
  
  <div class="field">
    <%= f.label "Fridge: " %>
    <%= f.collection_select :fridge_id, Fridge.all, :id, :id, {selected: @item.fridge.try(:id)}  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>