<div class="container">
  <div class="row">
    <h1>Items</h1>
  </div>
  <div class="row">
    <div class="btn-group btn-group-sm">
      <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown">
        Create new
      </button>
      <div class="dropdown-menu">
        <% if user_signed_in? %>
          <%=link_to 'New Item for the user', new_user_item_path(current_user), {class: "dropdown-item"}%>
        <% else %>
          <%= link_to 'New Item', new_item_path, {class: "dropdown-item"} %>
        <% end %> 
        <a href="#" id="new_item_btn" class= "dropdown-item">New Item on page</a>
      </div>  
        
    </div>
  </div>
  <div class="row">
    <div class="col-5">
      <ul id="items_li"></ul>
    </div>
    <div class="col-5" id="item_details_container"></div>
    <div class="col-2" id="messages_container"></div>
  </div>
</div>


<% render partial: 'show', locals: {items: @items}%>
<br>


